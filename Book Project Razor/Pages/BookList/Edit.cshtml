@page
@model Book_Project_Razor.Pages.BookList.EditModel

<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @*Dodaj ukryty parametr z bazy danych niezbędny później do działania*@
        <input type="hidden" asp-for="Book.Id" />
        @*Dzięki temu mam dostęp do informacji zwrotnej odnośnie walidacji*@
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            @*Wyświetlanie informacji o błędnej walidacji*@
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            @*Wyświetlanie informacji o błędnej walidacji*@
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            @*Wyświetlanie informacji o błędnej walidacji*@
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>


@*Dodając ten skryp walidacja danych jest po stronie klienta a nie serwera :)*@

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}